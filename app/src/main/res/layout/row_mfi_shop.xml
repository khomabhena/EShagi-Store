<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constLay"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:layout_marginEnd="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:layout_margin="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:text="*************"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Micro Finance Name"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/grayish"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintLeft_toLeftOf="@id/tvName" />

            <TextView
                android:id="@+id/tvPaymentType"
                android:text="**************"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="@id/tvName"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvP"
                android:text="Payment Type"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/grayish"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/tvN"
                app:layout_constraintRight_toRightOf="@id/tvPaymentType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvM"
                android:text="Monthly Payment"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/grayish"
                android:textSize="12sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvN"
                app:layout_constraintLeft_toLeftOf="@id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvMonthlyPayment"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:text="*************"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvM"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvI"
                android:text="Interest Rate"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/grayish"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/tvM"
                app:layout_constraintRight_toRightOf="@id/tvPaymentType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvInterestRate"
                android:text="*************"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="@id/tvMonthlyPayment"
                app:layout_constraintRight_toRightOf="@id/tvI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvT"
                android:text="Total Bank Charges"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/grayish"
                android:textSize="12sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvMonthlyPayment"
                app:layout_constraintLeft_toLeftOf="@id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTotalCharges"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:text="*************"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvT"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvA"
                android:text="Total Credit Applied"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/grayish"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/tvT"
                app:layout_constraintRight_toRightOf="@id/tvPaymentType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAmountDisbursed"
                android:text="*************"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toTopOf="@id/tvTotalCharges"
                app:layout_constraintRight_toRightOf="@id/tvI"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>