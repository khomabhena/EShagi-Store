<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constLay"
    android:orientation="vertical"
    android:layout_marginEnd="8dp"
    android:background="@drawable/chat_background_mfi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:text="Microfinance Name"
        android:textColor="@color/shagiGray"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/tvInterestRate"
        android:text="5% interest"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/tvMonthlyPayment"
        android:text="$25 ZWL monthly "
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInterestRate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>