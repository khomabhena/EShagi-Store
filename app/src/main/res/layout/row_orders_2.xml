<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constMeal"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="1px"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/tvOC"
        android:text="Order code: "
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOrderCode"
        android:text="QE1202"
        android:textColor="#000"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tvOC"
        app:layout_constraintLeft_toRightOf="@id/tvOC"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvD"
        android:text="Due by: "
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/tvOC"
        app:layout_constraintLeft_toRightOf="@id/center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDue"
        android:text="12:00, 06-02-19"
        android:textColor="@color/green"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/tvD"
        app:layout_constraintBottom_toBottomOf="@id/tvD"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvI"
        android:text="Items ordered: "
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvOC"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvItems"
        android:text="5"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/tvI"
        app:layout_constraintBottom_toBottomOf="@id/tvI"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvT"
        android:text="Total: "
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/tvI"
        app:layout_constraintLeft_toRightOf="@id/center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTotal"
        android:text="$24"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/tvT"
        app:layout_constraintBottom_toBottomOf="@id/tvT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOT"
        android:text="Order type: "
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvT"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOrderType"
        android:text="Takeaway"
        android:textColor="#000"
        android:textSize="13sp"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/tvOT"
        app:layout_constraintBottom_toBottomOf="@id/tvOT"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvS"
        android:text="Order status: "
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvT"
        app:layout_constraintLeft_toRightOf="@id/center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvStatus"
        android:text="Status"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/tvS"
        app:layout_constraintBottom_toBottomOf="@id/tvOT"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvN"
        android:text="Notes: "
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvOT"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNotes"
        android:text=""
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@id/tvN"
        app:layout_constraintTop_toTopOf="@id/tvN"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvA"
        android:text="Address: "
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvN"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvAddress"
        android:text="Address"
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@id/tvA"
        app:layout_constraintTop_toTopOf="@id/tvA"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOrderDate"
        android:text="13/02/19"
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/colorPrimary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrderDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

</androidx.constraintlayout.widget.ConstraintLayout>